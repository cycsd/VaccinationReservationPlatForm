@model VaccinationReservationPlatForm.ViewModels.CHospitalUser
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{

    @*<h1>ReservationHospital</h1>*@

    <div class="row col-lg-12 justify-content-center">
        <div class="col-lg-6" style="align-content: center; align-items: center; align-self: center; text-align: center; vertical-align: middle;">
            <form class="row g-3" method="post" action="Index" enctype="application/x-www-form-urlencoded">
                <h4 align="center"><font size="24">登入頁面</font></h4>
                <hr style="border-top:5px solid black" />
                <br />
                <div>
                    <div class="form-group mt-3">
                        <div class="form-floating ">
                            <input asp-for="hospitalUserName" class="form-control" id="floatingInput" placeholder="IdentityId" required>
                            <label asp-for="hospitalUserName" for="floatingInput" class="form-label"><font color="gray">帳號</font></label>
                            <span asp-validation-for="hospitalUserName" class="text-danger" style="color:red"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <div class="form-floating ">
                            <input asp-for="hospitalUserPassword" class="form-control" id="floatingPassword" placeholder="HealthId" required>
                            <label asp-for="hospitalUserPassword" for="floatingPassword" class="form-label"><font color="gray">密碼</font></label>
                            <span asp-validation-for="hospitalUserPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="input-group mb-3" style="padding:5px 5px 5px 5px;" id="test">
                        <span class="input-group-text" id="basic-addon1"><span class="glyphicon glyphicon-check"></span>&nbsp;<font size="1" color="red" align="top">*</font>圖形驗證碼</span>
                        <input type="text" class="form-control" placeholder="請輸入圖形驗證碼" aria-label="Username" aria-describedby="basic-addon1" name="code"><img id="Va" src="/ReservationHospital/GetValidateCode" height="30" style="" /><span class="input-group-text" id="btn" onclick="reImg()" alt="看不清楚，換一張。"><span class="glyphicon glyphicon-refresh"></span></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <label><font color="red">@ViewBag.Error</font></label>
                    </div>
                    <div class="text-center">
                        <input type="submit" value="登入" class="btn btn-primary" />
                    </div>

                </div>
            </form>
        </div>
    </div>
}

@section Scripts{
    <script type="text/javascript">
        function reImg() {
            var img = document.getElementById("Va");
            img.src = "/ReservationHospital/GetValidateCode?rnd=?" + Math.random();
        };

    </script>
}
