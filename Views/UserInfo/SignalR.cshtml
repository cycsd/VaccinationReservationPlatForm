@page

@{
    string user = ViewBag.Name;
}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link href="~/css/chat.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="app" style="width:500px; height:550px !important">
    <div class="row app-one">
        <div class="col-sm-12 conversation">
            <div class="row heading">
                <div class="col-sm-2 col-md-1 col-xs-3 heading-avatar">
                    <div class="heading-avatar-icon">
                        <img src="~/img/support.png" />
                    </div>
                </div>
                <div class="col-sm-8 col-xs-7 heading-name">
                    <a class="heading-name-meta">
                        客服中心
                    </a>
                    <span class="heading-online">Online</span>
                </div>
                <div class="col-sm-2 col-xs-1  heading-dot pull-right">
                    @*<i class="fa fa-ellipsis-v fa-2x  pull-right" aria-hidden="true"></i>*@
                </div>
            </div>
            <div class="row message" id="conversation">
                <div>
                    <ul id="messagesList">
                    </ul>
                </div>
            </div>
            <div class="row reply">
                <div class="col-sm-10 col-xs-10 reply-main">
                    <input type="text" id="userInput" value="@user" hidden />
                    <textarea class="form-control" rows="1" id="messageInput"></textarea>
                </div>
                <div class="col-sm-2 col-xs-2 reply-recording">
                    <button id="sendButton" class="btnMessage"><i class="fa fa-send fa-2x" aria-hidden="true"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>








@section Scripts{
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

}
